<% if posts.any? %>
  <% posts.each do |post| %>
    <div class="col-4 p-1">
      <%= link_to post do %>
        <%= image_tag post.photos.first.image.url, class: "img-fluid fadein-image", width: "1080px", height: "1080px" %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p class="my-5 mx-auto">投稿がありません</p>
<% end %>
