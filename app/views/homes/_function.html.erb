<div class="col-12 col-sm-6 col-lg-3 mb-4">
  <div class="card text-center h-100">
    <%= link_to function_page(function.title), class: "text-reset" do %>
      <div class="card-header px-0">
        <h3 class="card-title"><%= function.title %></h3>
        <h6 class="card-subtitle"><%= function.subtitle %></h6>
      </div>
      <div class="card-body p-3">
        <%= image_tag function.image.url, class: "function-visual" %>
        <%= simple_format(h function.content) %>
      </div>
    <% end %>
  </div>
</div>