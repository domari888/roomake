<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-control", readonly: true %>
</div>
<div class="form-group">
  <%= form.label :name_kana %>
  <%= form.text_field :name_kana, class: "form-control", readonly: true %>
</div>
<div class="form-group">
  <%= form.label :email %>
  <%= form.email_field :email, class: "form-control", readonly: true %>
</div>
<div class="form-group">
  <%= form.label :content %>
  <%= form.text_area :content, class: "form-control", rows: 5, readonly: true %>
</div>
<hr class="py-2 m-0">
<div class="form-group">
  <%= form.button "この内容で送信する", class: 'btn btn-main btn-block', name: "inquiry[confirmed]", value: "1" %>
  <%= form.button "入力画面に戻る", class: 'btn btn-secondary btn-block', name: "inquiry[confirmed]", value: "" %>
</div>
