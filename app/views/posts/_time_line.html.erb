<div class="col-12 col-sm-6 px-md-1">
  <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-6">
          <%= link_to post do %>
            <div class="posted-image">
              <%= image_tag post.photos.first.image.url, class: "img-fluid" %>
            </div>
          <% end %>
        </div>
        <div class="col-md-6">
          <div class="card-body d-flex flex-column h-100 p-0">
            <div class="card-user">
              <%= link_to user_path(post.user_id), class: 'd-inline-flex text-reset mw-100' do %>
                <div class="avatar-container">
                  <%= image_tag post.user_avatar.url, class: "user-avatar rounded-circle", size: "32x32" %>
                </div>
                <div class="font-weight-bold text-truncate align-self-center">
                  <%= post.user_name %>
                </div>
              <% end %>
            </div>
            <div class="d-flex px-3 py-2">
              <div class="mr-4" id="post-<%= post.id %>-like">
                <% if post.liked_by?(current_user) %>
                  <%= render "like", post: post %>
                <% else %>
                  <%= render "dislike", post: post %>
                <% end %>
              </div>
              <div id="post-<%= post.id %>-likes-count">
                <%= render "likes_count", post: post %>
              </div>
              <div class="mr-4" id="post-<%= post.id %>-mark">
                <% if post.marked_by?(current_user) %>
                  <%= render "mark", post: post %>
                <% else %>
                  <%= render "unmark", post: post %>
                <% end %>
              </div>
              <div id="post-<%= post.id %>-marks-count">
                <%= render "marks_count", post: post %>
              </div>
            </div>
            <small class="d-flex flex-wrap border-top px-3">
              <div class="pt-2 d-none d-lg-block">
                <i class="fas fa-tag tag-color"></i>
                <% post.tags.each do |tag| %>
                  <span class="pr-2">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
              <div class="pt-2 d-none d-lg-block">
                <i class="fas fa-folder category-color"></i>
                <% post.categories.each do |category| %>
                  <span class="pr-2">
                    <%= category.name %>
                  </span>
                <% end %>
              </div>
            </small>
            <%= link_to post, class: "text-reset p-3 py-md-2 my-auto" do %>
              <p class="card-text text-truncate">
                <%= post.content %>
              </p>
              <small  class="d-flex justify-content-end text-muted">詳細を見る</small>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
