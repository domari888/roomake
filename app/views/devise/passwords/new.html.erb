<div class="d-flex justify-content-center pt-3">
  <div class="d-inline-flex flex-column headline pb-4">
    <h2 class="m-0">Password Reissue</h2>
    <p class="text-center text-muted">パスワード再発行</p>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-info btn-block' %>
  </div>
<% end %>

<hr class="devise-link my-5">

<%= render 'devise/shared/links' %>
