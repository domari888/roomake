<div class="title-group">
  <h1>Password Reissue</h1>
  <p class="sub-title mb-0">パスワード再発行</p>
</div>
<hr class="devise-link mt-0 mb-4">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-info btn-block' %>
  </div>
<% end %>

<hr class="devise-link my-5">

<%= render 'devise/shared/links' %>
